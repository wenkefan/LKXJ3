<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/xjkp_fl_creat_type_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/xjkp_ll_dibudanghang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_xjkp_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv1"
                android:src="@drawable/yanshi_creat_type_left"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:text="@string/shangyiye"
                android:textColor="@drawable/history_color_select"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/xjkp_tv_page_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_one_fragment"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="1/3"/>
        <RelativeLayout
            android:id="@+id/rl_xjkp_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/tv2"
                android:layout_centerVertical="true"
                android:src="@drawable/yanshi_creat_type_right"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:paddingRight="5dp"
                android:text="@string/xiayiye"
                android:textColor="@drawable/history_color_select"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_xjkp_baocun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:padding="15dp"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="submit"
                android:background="@drawable/select_dianji_bg"
                android:layout_centerHorizontal="true"
                android:text="提交"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>