<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".android.ui.MainActivity">

    <RelativeLayout
        android:id="@+id/xjkp_rl_"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">
        <include layout="@layout/xjkp_title"/>
        <ImageView
            android:id="@+id/xjkp_iv_new"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/xjkp_icon_new"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/xjkp_fl_creat_type_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_xjkp_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="gone"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv1"
                android:src="@drawable/yanshi_creat_type_left"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:text="@string/shangyiye"
                android:textColor="@drawable/history_color_select"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_xjkp_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/tv2"
                android:layout_centerVertical="true"
                android:src="@drawable/yanshi_creat_type_right"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:paddingRight="5dp"
                android:text="@string/xiayiye"
                android:textColor="@drawable/history_color_select"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
